<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#292835"
    android:layout_height="wrap_content"
    tools:context="id.co.imastudio.profileapp.ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/imageView6"
            android:src="@drawable/wallpaper2"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:focusableInTouchMode="false"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#e42425"
            android:id="@+id/textView6"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e42627"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jl. Anggrek Rosliana no 12A RT 3/RW 9\n Kemanggisan Slipi Palmerah, Jakarta Barat 11480 Indonesia"
            android:focusableInTouchMode="false"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT"
            android:focusableInTouchMode="false"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#e42425"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e42627"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0822 1009 1001 \n0819 0819 1001"
            android:focusableInTouchMode="false"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:focusableInTouchMode="false"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#e42425"
            android:id="@+id/textView8"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e42627"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info@idn.id"
            android:focusableInTouchMode="false"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            android:id="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION ON MAP"
            android:focusableInTouchMode="false"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#e42425"
            android:id="@+id/textView10"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e42627"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/button_material_light"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="10dp" />

    </LinearLayout>

</ScrollView>
